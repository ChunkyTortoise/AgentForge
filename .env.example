# AgentForge Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# LLM API Keys (at least one required)
# ==============================================================================

# Google Gemini API (free tier available)
# Get your key at: https://ai.google.dev/
GOOGLE_API_KEY=your_gemini_api_key_here

# Anthropic Claude API (paid)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your_key_here

BACKEND_URL=http://localhost:8000

# ==============================================================================
# Default Settings
# ==============================================================================

# Default LLM provider: "gemini" or "claude"
DEFAULT_LLM_PROVIDER=gemini

# Default model names
GEMINI_MODEL=gemini-1.5-flash
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ==============================================================================
# RAG Settings
# ==============================================================================

# Embedding model (uses sentence-transformers by default, free)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Number of chunks to retrieve for RAG
RAG_TOP_K=5

# ==============================================================================
# Optional: Advanced Settings
# ==============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ChromaDB persistence directory
CHROMA_PERSIST_DIR=./data/chroma
